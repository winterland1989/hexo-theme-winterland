<article class="<%= item.layout %>">
  <% if (item.photos){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
      <% } %>
      <%- partial('post/title') %>
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <footer>
      <% if (index){ %>      
        <%- partial('post/tag') %>
        <% if (item.excerpt){ %>
          <div style="text-align:center;">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>        
      <% } else { %>
        <%- partial('post/category') %>
        <% if (theme.utterances){ %>
          <script src="https://utteranc.es/client.js"
            repo="<%- theme.utterances.repo %>"
            branch="<%- theme.utterances.branch %>"
            issue-term="<%- theme.utterances.term %>"
            async>
          </script>
        <% } %>
      <% } %>

      <div class="clearfix"></div>
    </footer>
  </div>
</article>
